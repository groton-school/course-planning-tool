{
  "name": "@groton/course-planning-tool",
  "version": "0.2.0",
  "author": {
    "name": "Seth Battis",
    "url": "https://github.com/groton-school"
  },
  "license": "GPL-3.0",
  "main": "src/index.ts",
  "homepage": "https://github.com/groton-school/course-planning-tool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groton-school/course-planning-tool.git"
  },
  "bugs": {
    "url": "https://github.com/groton-school/course-planning-tool/issues"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npx webpack",
    "deploy": "npx clasp push"
  },
  "dependencies": {
    "@battis/gas-lighter": "github:battis/gas-lighter#dist"
  },
  "devDependencies": {
    "@battis/eslint-config": "github:battis/eslint-config",
    "@battis/prettier-config": "github:battis/prettier-config",
    "@battis/webpack-typescript-gas": "github:battis/webpack-typescript-gas",
    "rimraf": "^4.4.1"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": [
      "@battis/eslint-config"
    ],
    "overrides": [
      {
        "files": "*.html",
        "env": {
          "browser": true,
          "node": false
        },
        "globals": {
          "google": "readonly",
          "replaceContent": "readonly",
          "attachEvent": "readonly",
          "showProgress": "readonly",
          "showStudentPicker": "readonly",
          "showFormPicker": "readonly"
        }
      }
    ]
  }
}
